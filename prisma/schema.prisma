generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id          String   @id
  sid         String   @unique
  data        String   
  expiresAt   DateTime

  @@map("session")
}

model User {
  id            String      @id @default(uuid())
  username      String
  password      String

  files         Files[]
  

  @@map("users")
}

model Files {
  id           String   @id @default(uuid())
  url          String   
  name         String
  date         DateTime  
  type         String
  starred      Boolean  @db.Boolean @default(false)
  pinned       Boolean  @db.Boolean @default(false)
  size         Int

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("files")
}