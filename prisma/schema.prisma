generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id          String   @id
  sid         String   @unique
  data        String   
  expiresAt   DateTime

  @@map("session")
}

model User {
  id            String      @id @default(uuid())
  username      String
  password      String

  files         Files[]
  folders       Folder[]
  

  @@map("users")
}

model Files {
  id           String   @id @default(uuid())
  url          String   
  name         String
  date         DateTime  
  type         String
  starred      Boolean  @db.Boolean @default(false)
  size         Int
  location     String
  asset_id     String
  public_id    String

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  folderId     String?
  folder       Folder?  @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@map("files")
}

model Folder {
  id         String @id @default(uuid())
  path       String
  name       String
  date       DateTime
  size       Int
  starred    Boolean  @default(false) @db.Boolean
  pinned     Boolean  @default(false) @db.Boolean
  type       String   @default("folder")

  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  files        Files[]

  @@map("folder")
}